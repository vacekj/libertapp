    "@emotion/styled": "^11.10.4",
    "@tauri-apps/api": "^1.1.0",
    "autoprefixer": "^10.4.11",
    "framer-motion": "^7.3.5",
    "next": "^12.3.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.1.8"
  },
  "devDependencies": {
    "@babel/core": "^7.19.1",
