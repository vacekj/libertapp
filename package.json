    "@typescript-eslint/parser": "^5.36.2",
    "babel-loader": "^8.2.5",
    "babel-plugin-macros": "^3.1.0",
    "cssnano": "^5.1.13",
    "eslint": "^8.23.0",
    "eslint-config-next": "^12.3.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-react": "^7.31.8",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "postcss": "^8.4.16",
    "prettier": "^2.7.1",
    "twin.macro": "3.0.0-rc.4.1",
    "typescript": "^4.8.3"
